{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "outDir": "build/",
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "*.log",
    ".gitignore"
  ]
}